<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_gradient_color_background"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".ui.activities.ProductDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_order_details_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.projectfire.bookmybook.custom_view_items.TextViewCustomBold
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/title_order_details"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/title_textSize" />

                <!--                <LinearLayout-->
                <!--                    android:id="@+id/ll_rv_order"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="200dp"-->
                <!--                    android:layout_margin="16dp"-->
                <!--                    android:layout_marginTop="10dp"-->
                <!--                    android:background="@drawable/item_dashboard_background"-->
                <!--                    android:padding="@dimen/item_image_padding">-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_ordered_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/cart_item_margin_ver"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/ll_checkout_place_order"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/ll_checkout_padding"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible">

                    <com.projectfire.bookmybook.custom_view_items.TextViewCustomBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Address"
                        android:textColor="@color/item_value_text_color"
                        android:textSize="@dimen/item_address_name_textSize" />

                    <com.projectfire.bookmybook.custom_view_items.TextViewCustomBold
                        android:id="@+id/tv_order_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/item_value_text_color"
                        android:textSize="@dimen/address_details_textSize"
                        tools:text="Gurbaaz Singh Gill" />

                    <com.projectfire.bookmybook.custom_view_items.TextViewCustomRegular
                        android:id="@+id/tv_order_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/address_details_marginTop"
                        android:textColor="@color/item_value_text_color"
                        android:textSize="@dimen/address_details_textSize"
                        tools:text="My House, 999999" />


                    <com.projectfire.bookmybook.custom_view_items.TextViewCustomRegular
                        android:id="@+id/tv_order_mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/address_details_marginTop"
                        android:textColor="@color/item_value_text_color"
                        android:textSize="@dimen/address_details_textSize"
                        tools:text="420-69-420" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_order_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/ll_checkout_padding"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomBold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/order_id"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="@dimen/checkout_label_value_textSize" />

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomRegular
                            android:id="@+id/tv_order_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="14sp"
                            tools:text="23456" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomBold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/order_date"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="@dimen/checkout_label_value_textSize" />

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomRegular
                            android:id="@+id/tv_order_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="14sp"
                            tools:text="₹10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomBold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/status"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="@dimen/checkout_label_value_textSize"
                            android:visibility="gone" />

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomBold
                            android:id="@+id/tv_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="@dimen/checkout_label_value_textSize"
                            android:visibility="gone"
                            tools:text="PENDING" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/ll_checkout_padding"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomRegular
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lbl_subtotal"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="@dimen/checkout_label_value_textSize" />

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomRegular
                            android:id="@+id/tv_sub_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="@dimen/checkout_label_value_textSize"
                            tools:text="₹100" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomRegular
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lbl_service_charge"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="@dimen/checkout_label_value_textSize" />

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomRegular
                            android:id="@+id/tv_order_service"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="@dimen/checkout_label_value_textSize"
                            tools:text="₹10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomBold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lbl_total_amount"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="@dimen/checkout_label_value_textSize" />

                        <com.projectfire.bookmybook.custom_view_items.TextViewCustomBold
                            android:id="@+id/tv_total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/item_value_text_color"
                            android:textSize="@dimen/checkout_label_value_textSize"
                            tools:text="₹110" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>